<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" x:Name="mainStackPanel">
        <GroupBox>
            <StackPanel HorizontalAlignment="Center">
                <GroupBox Header="Vitesse">
                    <StackPanel>
                        <Slider x:Name="speedSlider" ValueChanged="SpeedSlider_ValueChanged" Value="1" Width="100" Minimum="0.01" Maximum="10"/>
                        <Label x:Name="speedLabel">1 secondes</Label>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Statistiques">
                    <StackPanel>
                        <Label x:Name="lblIterations"/>
                        <Label x:Name="lblPopulation"/>
                        <Label x:Name="lblMinPopulation"/>
                        <Label x:Name="lblMaxPopulation"/>
                        <Label x:Name="lblOldest"/>
                    </StackPanel>

                </GroupBox>
                <Button x:Name="startButton" Click="StartButton_Clicked">Start</Button>
                <Button x:Name="stopButton" Click="StopButton_Clicked">Stop</Button>
                <Button x:Name="resetButton" Click="ResetButton_Clicked">Reset</Button>
                <Button x:Name="randomizeButton" Click="RandomizeButton_Clicked">Randomize</Button>
                <TextBox x:Name="xTextBox" Text="10" Width="25" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"></TextBox>
                <TextBox x:Name="yTextBox" Text="10" Width="25" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"></TextBox>
            </StackPanel>
        </GroupBox>
        <StackPanel x:Name="GridPanel" SizeChanged="GridPanel_SizeChanged" Margin="10" Width="646" />
    </StackPanel>
</Window>    
