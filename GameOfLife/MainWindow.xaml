<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="mainStackPanel" VerticalAlignment="Bottom" >
        <StackPanel x:Name="GridPanel"></StackPanel>
        <GroupBox Header="Paramêtres">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="startButton">Start</Button>
                <Button x:Name="pauseButton">Pause</Button>
                <Button x:Name="restButton">Reset</Button>
            </StackPanel>
        </GroupBox>
        
    </StackPanel>
</Window>
